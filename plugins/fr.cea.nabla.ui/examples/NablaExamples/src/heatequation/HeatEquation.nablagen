with HeatEquation.*;

workflow HeatEquationGenerationChain transforms HeatEquation
{
	Nabla2Ir nabla2ir
	{
		timeVariable = t;
		deltatVariable = Î´t;
		nodeCoordVariable = X;
	}

	TagPersistentVariables tagPersistentVariables follows nabla2ir 
	{ 
		dumpedVariables = u as "Temperature";
		period = outputPeriod for n;
	}
	
	ReplaceUtf replaceUtf follows tagPersistentVariables
	{
	}
	
	ReplaceReductions replaceReductions follows replaceUtf
	{
	}
	
	OptimizeConnectivities optimizeConnectivities follows replaceReductions
	{
		connectivities = cells, nodes, faces;
	}
	
	FillHLTs fillHlts follows optimizeConnectivities
	{
	}
	
	Ir2Code javaGenerator follows fillHlts
	{
		language = Java;
		outputDir = "/NablaExamples/src-gen-java";
	}

	Ir2Code stlGenerator follows fillHlts
	{
		language = Cpp
		{
			maxIterationVariable = maxIterations;
			stopTimeVariable = stopTime;
			programmingModel = StlThread;
			compiler = GNU;
		}
		outputDir = "/NablaExamples/src-gen-cpp/stl-thread";
	}

	Ir2Code kokkosGenerator follows fillHlts
	{
		language = Cpp
		{
			maxIterationVariable = maxIterations;
			stopTimeVariable = stopTime;
			programmingModel = Kokkos;
			kokkosPath = "$ENV{HOME}/kokkos/kokkos-install";
			compiler = GNU;
		}
		outputDir = "/NablaExamples/src-gen-cpp/kokkos";
	}

	Ir2Code kokkosTeamThreadGenerator follows fillHlts
	{
		language = Cpp
		{
			maxIterationVariable = maxIterations;
			stopTimeVariable = stopTime;
			programmingModel = KokkosTeamThread;
			kokkosPath = "$ENV{HOME}/kokkos/kokkos-install";
			compiler = GNU;
		}
		outputDir = "/NablaExamples/src-gen-cpp/kokkos-team";
	}
}