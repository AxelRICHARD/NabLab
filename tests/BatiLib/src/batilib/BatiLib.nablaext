/*
 * This file contains the providers for the BatiLib NabLab extension.
 * The list is ordered: the first ExtensionProvider is the default one for the specified target.
 * For example, if you entered two StlThread ExtensionProvider instances,
 * the first one in the following list will be the default one during NabLab
 * code generation for the target StlThread.
 */

/*
 * C++ Extension Provider
 * Source files (.h and .cc) in projectDir/BatiLibCpp/src
 *
 * Build instructions:
 *   - go into the projectDir/BatiLibCpp project directory and create a lib directory to build the project: mkdir lib; cd lib
 *   - start cmake with in setting your compiler and compile: cmake -D CMAKE_CXX_COMPILER=/usr/bin/g++ ../src; make
 */
ExtensionProvider BatiLibCpp : BatiLib
{
	target = CppSequential;
	// projectDir is the parent directory of the BatiLibCpp project. $ENV and other CMake keywords can be used."
	projectDir = "$ENV{HOME}/workspaces/NabLab/tests/BatiLibCpp";
}

/* 
 * Java Extension Provider
 * Source files (.h and .cc) in projectDir/BatiLibJava/src
 */
ExtensionProvider BatiLibJava : BatiLib
{
	target = Java;
	// projectDir is the parent directory of the BatiLibJava project. $ENV and other CMake keywords can be used."
	projectDir = "$ENV{HOME}/workspaces/NabLab/tests/BatiLibJava";
}
