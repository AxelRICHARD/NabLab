module WaveWrite;

itemtypes { cell, node }

connectivity cells: → {cell};
connectivity nodes: → {node};

def wavewrite: → ℝ;

option ℝ X_EDGE_LENGTH = 0.01;
option ℝ Y_EDGE_LENGTH = X_EDGE_LENGTH;
option ℕ X_EDGE_ELEMS = 1101; //surf0mm.grd
option ℕ Y_EDGE_ELEMS = 42;   //surf0mm.grd

let ℝ t = 0.0;

option ℝ maxTime = 0.1;
option ℕ maxIter = 500;
option ℝ δt = 1.0;

ℝ[2] X{nodes};
ℝ η{cells};

writeToFile: ∀j∈cells(), η{j} = wavewrite(); //wavewrite(H^{n}, nbx, nby)